{
  "compilerOptions": {
    "baseUrl": ".", // Puedes configurar esto según la estructura de tu proyecto
    "paths": {
      "@/*": [
        "src/*"
      ] // Este es un ejemplo, asegúrate de que coincida con la estructura de tu proyecto
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es6"
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "src/app/api/mercadopago/payment/route.ts",
    "src/app/api/pdf-generate/route.ts",
    "src/app/layout.tsx",
    "src/app/productos/[categoria]/page.tsx",
    "src/componentes/MercadoPago/MercadoPago.js",
    "src/componentes/PantallaPromocion/PantallaContador.js",
    "src/componentes/Reviews/Reviews.js",
    ".next/types/**/*.ts"
, "next.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
